<h1>Update image:</h1>

<%= form_for [@user, @image] do |f| %>
  <br>
  <%= f.label :url %>:
  <%= f.text_field :url %>
  <br><br>
  <%= f.label :Name_or_Description %>:
  <%= f.text_field :description %>
  <br><br>
  <p><%= f.submit %></p>
<% end %>

<p><%= link_to "Delete image", user_image_path,
                        :data => {:confirm => "Are you sure?",
                                        :method => "delete"} %></p>

<p><%= link_to "Return to images", user_image_path %></p>