<!DOCTYPE html>
<html>
  <head>
    <title>StickR</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
  <nav class="navbar navbar-expand-md navbar-dark bg-dark">
    <div class="container-fluid">
        <a class="navbar-brand abs" >StickR</a>
        <button class="navbar-toggler ms-auto" type="button" data-bs-toggle="collapse" data-bs-target="#collapseNavbar">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="navbar-collapse collapse" id="collapseNavbar">
            <ul class="navbar-nav">
                <li class="nav-item active">
                  <a class="nav-link active" aria-current="page" href="/">Home</a>
                </li>
                <li class="nav-item">
                <a class="nav-link" href="/show">Photos</a>
                </li>
                <li class="nav-item">
                <a class="nav-link" href="/admin">Admin Dashboard</a>
                </li>
            </ul>
            <ul class="navbar-nav ms-auto">
                <li class="nav-item">
                <% if current_user %>
                <%# <a class="nav-link" href="/signout">Sign out</a> %>
                <%= current_user.email %> | <%= link_to "Sign out", '/signout' %>
            <% else %>
              <%= link_to "Sign up", 'signup' %> | <%= link_to "Sign in", '/signin' %>
            <% end %>
                </li>
            </ul>
        </div>
    </div>
  </nav>

     
      <div class="container">
     

      <span id="alert"><%= flash[:alert] %></span>
      <span id="notice"><%= flash[:notice] %></span>

     
      <%= yield %>
    </div>
  </body>
</html>
